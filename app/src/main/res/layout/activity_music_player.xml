<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerActivity"
    android:background="#FF6D00">

    <TextView
        android:id="@+id/song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:text="Song Title "
        android:singleLine="true"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:ellipsize="marquee"/>

    <ImageView
        android:id="@+id/media_art"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_above="@+id/media_controls"
        android:layout_centerInParent="true"
        android:src="@drawable/media_art" />

    <RelativeLayout
        android:id="@+id/media_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="40dp">

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/media_time_start"
            android:layout_below="@id/seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/media_total_time"
            android:layout_below="@id/seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:textColor="@color/white"/>
        
        <RelativeLayout
            android:layout_below="@+id/media_total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/media_previous"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_skip_previous_24"/>

            <ImageView
                android:id="@+id/media_play_pause"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_play_circle_outline_24" />
            <ImageView
                android:id="@+id/media_next"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_skip_next_24"/>

        </RelativeLayout>

    </RelativeLayout>
    
